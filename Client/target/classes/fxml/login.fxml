<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #ebebeb;" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.Login">
   <children>
      <PasswordField fx:id="passwordInput" layoutX="195.0" layoutY="214.0" prefHeight="32.0" prefWidth="210.0" promptText="%password.tf" style="-fx-background-color: #ebebeb; -fx-border-color: #cccccc; -fx-border-radius: 10;" />
      <TextField fx:id="usernameInput" layoutX="196.0" layoutY="168.0" prefHeight="32.0" prefWidth="210.0" promptText="%login.tf" style="-fx-border-color: #cccccc; -fx-border-radius: 10; -fx-background-color: #ebebeb;" />
      <ImageView fitHeight="108.0" fitWidth="115.0" layoutX="247.0" layoutY="41.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../user.png" />
         </image>
      </ImageView>
      <Button fx:id="loginButton" layoutX="195.0" layoutY="295.0" mnemonicParsing="false" onAction="#login" prefHeight="32.0" prefWidth="210.0" style="-fx-background-color: #00a0fc; -fx-background-radius: 10;" text="%login.btn" textAlignment="CENTER" textFill="WHITE">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Button>
      <Text fx:id="errorText" fill="#e82727" layoutX="198.0" layoutY="275.0" strokeType="OUTSIDE" strokeWidth="0.0" textAlignment="CENTER" wrappingWidth="204.0" />
      <Button fx:id="goRegBtn" layoutX="175.0" layoutY="338.0" mnemonicParsing="false" onAction="#goRegister" prefHeight="25.0" prefWidth="247.0" style="-fx-background-color: #ebebeb;" text="%goRegister.text" textAlignment="CENTER" textFill="#00a0fc" />
      <ChoiceBox fx:id="languageChoice" layoutX="28.0" layoutY="351.0" prefHeight="25.0" prefWidth="70.0" />
   </children>
</AnchorPane>
